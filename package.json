{
  "name": "forex-bot",
  "version": "1.0.0",
  "description": "Autonomous Forex Trading Agent with AI-powered analysis and execution",
  "main": "src/agent.ts",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/agent.ts",
    "start": "tsx src/agent.ts",
    "web": "NODE_OPTIONS='--experimental-require-module' npx @google/adk-devtools web src",
    "typecheck": "tsc",
    "clean": "rm -rf dist",
    "docker:up": "docker compose up -d",
    "docker:dev": "docker compose --profile dev up",
    "docker:down": "docker compose down"
  },
  "keywords": [
    "forex",
    "trading",
    "ai-agent",
    "openai",
    "gemini"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.16.0",
    "tsx": "^4.20.6",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@google-cloud/opentelemetry-cloud-monitoring-exporter": "^0.21.0",
    "@google-cloud/opentelemetry-cloud-trace-exporter": "^3.0.0",
    "@google-cloud/storage": "^7.18.0",
    "@google/adk": "^0.2.4",
    "@google/adk-devtools": "^0.2.4",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/api-logs": "^0.211.0",
    "@opentelemetry/exporter-logs-otlp-http": "^0.211.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.211.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.211.0",
    "@opentelemetry/resource-detector-gcp": "^0.45.0",
    "@opentelemetry/resources": "^2.5.0",
    "@opentelemetry/sdk-logs": "^0.211.0",
    "@opentelemetry/sdk-metrics": "^2.5.0",
    "@opentelemetry/sdk-trace-base": "^2.5.0",
    "@opentelemetry/sdk-trace-node": "^2.5.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "pg": "^8.17.2",
    "zod": "3.25.76"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
